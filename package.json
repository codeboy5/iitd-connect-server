{
  "name": "iitd-connect-server",
  "version": "0.0.1",
  "repository": "https://github.com/codeboy5/iitd-connect-server.git",
  "scripts": {
    "start": "node dist/server.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "build": "tsc && npm run tslint",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.15",
    "mongoose-unique-validator": "^2.0.3",
    "nodemailer": "^6.2.1",
    "validator": "^11.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/express-jwt": "^0.0.42",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.5.6",
    "@types/mongoose-unique-validator": "^1.0.1",
    "@types/node": "^12.0.8",
    "@types/validator": "^10.11.1",
    "concurrently": "^4.1.0",
    "nodemon": "^1.19.1",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  }
}

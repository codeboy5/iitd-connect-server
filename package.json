{
  "name": "iitd-connect-server",
  "version": "0.0.1",
  "repository": "https://github.com/codeboy5/iitd-connect-server.git",
  "scripts": {
    "start": "npm run serve",
    "serve": "node build/src/server.js",
    "watch-node": "nodemon build/src/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "serve-debug": "nodemon --inspect build/src/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check",
    "eslint-test": "eslint './**/*.ts'",
    "eslint-fix": "eslint --fix './**/*.ts'",
    "prettier-test": "prettier --check './**/*.ts'",
    "prettier-fix": "prettier --write './**/*.ts'",
    "lint-tests": "npm run eslint-test;npm run prettier-test",
    "lint-fixes": "npm run eslint-fix;npm run prettier-fix",
    "api-tests": " env-cmd -f ./config/test.env jest --watch --runInBand"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-validator": "^5.3.1",
    "firebase-admin": "^8.2.0",
    "google-auth-library": "^4.2.2",
    "googleapis": "^40.0.0",
    "jsonwebtoken": "^8.5.1",
    "lusca": "^1.6.1",
    "mongoose": "^5.7.5",
    "mongoose-unique-validator": "^2.0.3",
    "nodemailer": "^6.2.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "slug": "^1.1.0",
    "uuid": "^3.3.2",
    "validator": "^11.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/express-jwt": "^0.0.42",
    "@types/jest": "^26.0.3",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lusca": "^1.6.0",
    "@types/mongoose": "^5.5.6",
    "@types/mongoose-unique-validator": "^1.0.1",
    "@types/node": "^13.11.1",
    "@types/nodemailer": "^6.2.0",
    "@types/request-promise": "^4.1.44",
    "@types/slug": "^0.9.1",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^3.4.4",
    "@types/validator": "^10.11.1",
    "concurrently": "^4.1.0",
    "env-cmd": "^10.1.0",
    "gts": "^2.0.2",
    "jest": "^26.1.0",
    "minimist": "^1.2.5",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1",
    "typescript": "^3.8.3"
  }
}
